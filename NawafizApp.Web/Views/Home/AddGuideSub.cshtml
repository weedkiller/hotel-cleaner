
@{
    ViewBag.Title = "AddGuideSub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    select {
        max-height: 50px;
        overflow-y: scroll;
        background-color: white;
        direction: rtl;
        padding-right: 30px;
        text-indent: 5px;
        text-align: center;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        background: url(../../Images/arrow.png) 4% / 20% no-repeat content-box;
    }
    /* Dropdown Button */
    .dropbtn {
        background-color: #3d4957;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
    }

        /* Dropdown button on hover & focus */
        .dropbtn:hover, .dropbtn:focus {
            background-color: #36c6d3;
        }
</style>


<div class="" style="">
    <div style="">


        @model NawafizApp.Services.Dtos.InputGuideDto
        @using (Html.BeginForm("AddGuide", "Home", FormMethod.Post))
