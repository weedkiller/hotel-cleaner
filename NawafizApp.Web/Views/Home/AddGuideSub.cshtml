                                    <label for="form_control_1"> حالة الإعلان</label>
                                </div>
                                @Html.TextBoxFor(m => m.ParentID, new { @style = "display:none;", @Value = ViewBag.city })

                                @Html.ValidationMessageFor(m => m.ParentID, "", new { @class = "text-danger help-block help-block-error" })
                                @*<div style="margin-right:20px;">
                                        <blockquote style="border:1px ridge white;text-align:center;" title="إضافة مدينة">
                                            <h2 style="color:white;text-align:center;">إضافة مدينة</h2>
                                            <h4 style="color:white;display:inline">الاسم العربي</h4>
                                            @Html.TextBoxFor(m => m.ArabicCityName);
                                            <h4 style="color:white;display:inline;margin-right:20px;">الاسم الانكليزي</h4>
                                            @Html.TextBoxFor(m => m.EnglishCityName);

                                            <h4 style="color:white;display:inline;margin-right:20px;">الترتيب</h4>
                                            @Html.TextBoxFor(m => m.Sort);
                                            <button type="submit" class="dropbtn">إضافة</button>
                                        </blockquote>
                                    </div>*@

                                <div class="form-actions noborder">
                                    <input type="submit" value="ادخال" class="btn blue" style="" />
                                    @*<button type="button" class="btn blue">Submit</button>*@
                                    <input type="reset" value="تفريغ الخانات" class="btn default" />
                                    @Html.ActionLink("العودة الى الفئات", "Guide", "Home", new { @class = "btn default" })
                                </div>

                            </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


