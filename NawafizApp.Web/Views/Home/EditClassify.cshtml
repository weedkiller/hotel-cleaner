        @model NawafizApp.Services.Dtos.InputClassifyDto

        @using (Html.BeginForm("EditClassify", "Home", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
        {


            @Html.AntiForgeryToken()
            <div class="page-content">
                @*col-md-12*@
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet light ">
                    <div class="portlet-title">
                        <div class="caption font-green">
                            <i class="icon-pin font-green"></i>
                            <span class="caption-subject bold uppercase"> تعديل إعلان</span>
                        </div>

                    </div>
                    <div class="portlet-body form">
                        <form role="form">
                            <div class="form-body">
                                
                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                   
                                    @Html.TextBoxFor(m => m.ClassifyName, new { @Value = ViewBag.ClassifyName, @class = "form-control" })
                                    @Html.TextBoxFor(m => m.Id, new { @Value = ViewBag.Id, @style = "display:none;" })
                                    @Html.TextBox("guid", null, new { @Value = ViewBag.Guid, @style = "display:none;" })
                                   
                                    <label for="form_control_1">الاسم</label>
                                    @*<span class="help-block">ادخال عنوان الإعلان ...</span>*@
                                    @Html.ValidationMessageFor(m => m.ClassifyName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                    
                                    @Html.TextBoxFor(m => m.Description, new { @Value = ViewBag.Description, @class = "form-control" })
                                    @*@Html.TextAreaFor(m => m.Description, new { @class = "form-control" })*@
                                    <label for="form_control_1">الوصف</label>
                                    @*<span class="help-block">ادخال وصف الإعلان ...</span>*@
                                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                    @*<input type="text" class="form-control" id="form_control_1">*@
                                    @Html.TextBoxFor(m => m.Email, null, new { @Value = ViewBag.Email , @class = "form-control" })
                                   
                                    <label for="form_control_1">ايميل للتواصل</label>
                                    @*<span class="help-block">ادخال ايميل للتواصل ...</span>*@
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                                

                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                   
                                    @Html.TextBoxFor(m => m.FullName, new { @Value = ViewBag.FullName, @class = "form-control" })
                                    @*@Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })*@
                                    <label for="form_control_1">اسم صاحب الإعلان</label>
                                    @*<span class="help-block">ادخال اسم صاحب الإعلان ...</span>*@
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                    
                                    @Html.TextBoxFor(m => m.Mobile, null, new { @Value = ViewBag.Mobile, @class = "form-control" })
                                    @*@Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Value = ViewBag.ClassifyMobile })*@
                                    <label for="form_control_1">رقم الهاتف المحمول</label>
                                    @*<span class="help-block">ادخال رقم الهاتف المحمول ...</span>*@
                                    @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                    @*<input type="text" class="form-control" id="form_control_1">*@
                                    @Html.TextBoxFor(m => m.Price, null, new { @Value = ViewBag.Price, @class = "form-control" })
                                    @*@Html.TextBoxFor(m => m.Price, new { @class = "form-control", @Value = ViewBag.ClassifyPrice })*@
                                    <label for="form_control_1">السعر</label>
                                    @*<span class="help-block">ادخال السعر ...</span>*@
                                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label has-info">

                                    @Html.DropDownListFor(m => m.CategoryId, (IEnumerable<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control edited", @style = "" })

                                    <label for="form_control_1"> الفئة</label>
                                    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group form-md-line-input form-md-floating-label has-info">

                                    @Html.DropDownListFor(m => m.TownId, (IEnumerable<SelectListItem>)ViewBag.TownList, new { @class = "form-control edited", @style = "" })

                                    
                                    <label for="form_control_1"> المنطقة</label>
                                    @Html.ValidationMessageFor(m => m.TownId, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label">
                                    @*<input type="text" class="form-control" id="form_control_1">*@
                                    <label for="form_control_1" style="">الصور الخاصة بالإعلان</label>
                                    <br />
                                    @for (int i = 0; i < ViewBag.ArrayCount - (ViewBag.ArrayCount - 1); i++)
                                    {
                                        <div style="display:inline-block;text-align:center;border:solid 1px #cccccc;padding:2px 10px;">
                                            <h4>الصورة الرئيسية</h4><br />
                                            <img src="@ViewBag.ImagesPath[i]" width="100px" height="100px" />
                                            <br />
                                            @Html.ActionLink("delete", "deletePhoto", "Home", new { @id = ViewBag.Id, @url = ViewBag.ImagesPath[i], @guid = ViewBag.Guid }, new { @class = "btn default", @style = "margin-top:5px;" })
                                            </div>
                                    }

                                    @for (int i = 1; i < ViewBag.ArrayCount; i++)
                                    {
                                        <div style="display:inline-block;text-align:center;">
                                            <img src="@ViewBag.ImagesPath[i]" width="100px" height="100px" />
                                            <br />
                                            @Html.ActionLink("delete", "deletePhoto", "Home", new { @id = ViewBag.Id, @url = ViewBag.ImagesPath[i], @guid = ViewBag.Guid }, new { @class = "btn default",@style="margin-top:5px;" })
                                            @Html.ActionLink("IsPrimary", "PrimaryPhoto", "Home", new { @id = ViewBag.Id, @url = ViewBag.ImagesPath[i], @guid = ViewBag.Guid }, new { @class = "btn green", @style = "margin-top:5px;" })
                                        </div>
                                    }
                                    
                                    
                                    <br /><label for="form_control_1" style="padding-top:5px;border-top:solid 1px #cecdcd;width:100%;margin-top: 10px;"  max-uploads=2>ترفيع صور جديدة</label><br />
                                    <input type="file" id="myFile" name="postedFiles" max="2" maxlength="2" multiple="multiple" style="margin-top:10px;"><br>
                                    
                                    @* @Html.TextBox("postedFiles",null, new { @type = "file", @multiple = "multiple" });*@
                                    <span class="help-block">ترفيع الصور الخاصة بالإعلان ...</span>
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                    @*<input type="text" class="form-control" id="form_control_1">*@
                                    <label for="form_control_1">@ViewBag.ErrorMessage</label>
                                </div>
                                <div class="form-group form-md-line-input form-md-floating-label has-success">
                                    @*<input type="text" class="form-control" id="form_control_1">*@
                                    <label for="form_control_1">@ViewBag.Message</label>
                                </div>



                            </div>


                            <div class="form-actions noborder">
                                <input type="submit" value="ادخال" class="btn blue" style="" />
                                
                                <input type="reset" value="تفريغ الخانات" class="btn default" />
                                @Html.ActionLink("العودة الى الإعلانات", "Classified", "Home", new { @class = "btn default" })
                            </div>
                        </form>
                    </div>
                </div>




                <!-- END SAMPLE FORM PORTLET-->

            </div>

