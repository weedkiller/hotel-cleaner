<style>
    a {
        text-shadow: none;
        color: #afab14;
    }

    .searchform {
        margin: 7px;
    }

    #form {
        border: 1px solid black;
        border-radius: 10px;
        padding: 10px;
        background-color: #dee19b;
        margin-bottom: 5px;
