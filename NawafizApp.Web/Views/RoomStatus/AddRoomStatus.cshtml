        <div class="caption">
            <i class="fa fa-gift"></i>حالات الغرغ
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("AddRoomStatus", "RoomStatus", new { id = ViewBag.Id, statId= ViewBag.statId }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("رقم الحالة", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.StatusNum, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                        @Html.ValidationMessageFor(model => model.StatusNum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("حالة الغرفة", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.DropDownListFor(model=>model.Status, new List<SelectListItem> { new SelectListItem {Text= "بحاجة تنظيف",Value="بحاجة تنظيف",Selected=true}
             ,new SelectListItem {Text= "مشغولة",Value="مشغولة"}
            ,new SelectListItem {Text= "فارغة",Value="فارغة"}
              ,new SelectListItem {Text= "جاهزة ",Value="جاهزة "}
            }, new { @class = "form-control", id = "" })
                    </div>
                </div>
               
                <div class="form-group">
                    <div class="col-xs-offset-2 col-md-2 col-xs-9 col-sm-2">
                        <input type="submit" value="إضافة" class="btn btn-warning" style="width:100%" />
                    </div>
                </div>
            </div>
        }
