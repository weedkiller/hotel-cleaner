@model IEnumerable<NawafizApp.Services.Dtos.CleanOrderDto>

@{
    ViewBag.Title = "getAllOrders";
    Layout = "~/Views/Shared/_Layout-hoster.cshtml";
}
<div class="portlet box yellow">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> طلبات النظافة
        </div>
    </div>
    <div class="portlet-body">

        <table class="table">
            <tr>

                <th>
                    موظف الحجز
                </th>

                <th>
                    المشرف
                </th>

                <th>
                    النظافة
                </th>
                <th>
                    تاربخ الأنشاء
                </th>
                <th>
                    وقت الأنشاء
                </th>

                <th>
                    وصف
                </th>

                <th>
                    رقم الغرفة
                </th>
                <th>
                    مستلمة ؟
                </th>
                <th>
                    منتهية ؟
                </th>
                <th>
                    تاريخ و وقت الأستلام
                </th>
                <th>
                    تاريخ و وقت الأنتهاء
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.HosterName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.moshrefname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.empName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creation_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creation_Time)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Roomnu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Istaked)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isFinished)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.startdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.enddate)
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
