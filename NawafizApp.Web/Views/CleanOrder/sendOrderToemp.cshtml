@model NawafizApp.Services.Dtos.CleanOrderDto
@using NawafizApp.Web.Models

@{
    ViewBag.Title = "sendOrderToemp";
    Layout = "~/Views/Shared/_Layout-supervices.cshtml";
}



<div class="portlet box yellow">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>أرسال المهمة الى عامل
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <tr>
                الرجاء إختيار العمال المطلوب من قائمة العمال غير المشغولين
            </tr>

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)



                <div class="form-group col-md-6">
                    @Html.Label("عمال الكتلة  ", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="input-group select2-bootstrap-prepend" style="width:100%">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button" data-select2-open="single-prepend-text">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                            <select id="single-prepend-text" name="eid" class="form-control select2 select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                                <option></option>
                                @foreach (var item in Selects.AveEmp(Model.Room_ID))
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    @Html.Label("الوصف ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="إرسال" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>