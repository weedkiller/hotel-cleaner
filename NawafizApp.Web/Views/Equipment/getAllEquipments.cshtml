@model IEnumerable<NawafizApp.Services.Dtos.EquipmentDto>

@{
    ViewBag.Title = "getAllEquipments";
    Layout = "~/Views/Shared/_Layout-hoster.cshtml";

}

<div class="portlet box yellow">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>التجهيزات
        </div>
    </div>
    <div class="portlet-body">

        @{
            var id = Convert.ToInt32( ViewBag.rid );

        }
        @Html.ActionLink("إضافة تجهيز جديد", "AddEquipment", "Equipment", new { rid =id })

