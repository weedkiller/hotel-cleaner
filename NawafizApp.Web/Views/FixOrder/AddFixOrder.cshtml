@model NawafizApp.Services.Dtos.FixOrderDto

@{
    ViewBag.Title = "طلبات الصيانة  ";
    Layout = "~/Views/Shared/_Layout-hoster.cshtml";
}


<div class="portlet box yellow">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>إضافة طلب صيانة 
        </div>
    </div>
    <div class="portlet-body">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>إضافة </h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                <div class="form-group">
                    <label class="col-md-3 control-label">وصف </label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="إضافة" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("رجوع", "getAllRoom", "Room")
        </div>

</div>
</div>