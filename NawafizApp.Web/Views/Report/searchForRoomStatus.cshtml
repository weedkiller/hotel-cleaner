

<div class="portlet box yellow">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>استعراض الكتل الفندقية
        </div>
    </div>
    <div class="portlet-body">
        <div class="container-fluid">
            <div class="row">
                <div class="portlet-title col-xs-12">
                    <div class="heading media-heading-sub">
                        <div class="caption font-purple-haze m-heading-1" style="">
                            <i class="fa fa-search font-purple-haze" style="font-size:x-large;color:black"></i>
                            <span class="caption-subject bold uppercase " style="font-size:x-large;color:black">فلترة حسب :</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @using (Ajax.BeginForm("getAllHotelBlockForRoom", "Report", new { filter = Model, cid = ViewBag.cid }, new AjaxOptions { UpdateTargetId = "table", InsertionMode = InsertionMode.Replace, HttpMethod = "get", LoadingElementId = "wait", LoadingElementDuration = 9000 }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-md-6">
                    @Html.Label("رقم الكتلة", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div style="position:relative;margin-bottom:10px">
                            @Html.Editor("BlockNum", new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @value = "0" } })
                        </div>
                    </div>

                </div>
                <div class="form-group col-md-6">
                    @Html.Label("اسم الكتلة", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div style="position:relative;margin-bottom:10px">
                            @Html.Editor("BlockName", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" id="sdasda" value="بحث" class="btn btn-warning " style="width:30%" />

                    </div>
                </div>
            </div>
        }

        <div id="wait" hidden="hidden">
            <i><b>جاري البحث</b></i>   <img src="~/Images/loader.gif" width="35" height="35" />

        </div>
    </div>

    <br />
    <br />
    <div id="table">

    </div>
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>
    $(document).ready(function () {
        $("#sdasda").click()
        $('#dd').keydown(function (e) {
            e.preventDefault();
            return false;
        });
        $('#ddd').keydown(function (e) {
            e.preventDefault();
            return false;
        });
    });
</script>



